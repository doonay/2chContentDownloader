<KVBL>:

    #krak_blenda: blenda
    krak_button: button
    krak_input: input

    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            source: 'accets/bg.png'
            size: self.size

    #canvas:
    #    id: blenda
    #    Color:
    #        rgba: 1, 1, 1, .5
    #    Rectangle:
    #        size: self.size
    #        opacity: 0

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .2
        pos_hint: {'center_x':0.5, 'top':1}



        TextInput:
            id: input
            multiline: False
            font_size: 12
            hint_text: 'Полный адрес треда (типа https://2ch.hk/hw/res/123456789.html)'
            multiline: False

        Button:
            id: button
            text: "Go!"
            background_color: 1, 1, 1, 1
            #background_color: '#ff9212'
            #background_color: rgba(255, 157, 14, 1)
            #background_color: 'orange'
            #hex_color:0, 1, 1, 1
            color: 'white'
            font_size: 28
            size_hint_x: .2

            on_release:
                self.text = 'Released'
                self.font_size = 12
                #root.pos_hint: {'center_x':0.5, 'top':-1}
                #print(root.children[0].children[1].text)
                #root.children[0].opacity = 0
                #root.children[0].pos_hint = {'center_x':0.5, 'top':-1}
                #root.canvas.Color.rgba = 1, 1, 1, 1
                root.newclr(self)
